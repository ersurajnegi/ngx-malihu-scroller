{
  "name": "ngx-malihu-scroller",
  "version": "1.0.5",
  "description": "Angular directive for custom scroller for angular web apps",
  "main": "MalihuCustomScrollerModule.umd.js",
  "jsnext:main": "MalihuCustomScrollerModule.esm.js",
  "module": "MalihuCustomScrollerModule.esm.js",
  "types": "index.d.ts",
  "scripts": {
    "transpile": "ngc",
    "package": "rollup -c",
    "minify": "uglifyjs dist/MalihuCustomScrollerModule.umd.js --screw-ie8 --compress --mangle --comments --output dist/MalihuCustomScrollerModule.umd.min.js",
    "copy": "node tools/copy-package.js",
    "build": "npm run transpile && npm run package && npm run minify && npm run copy",
    "publish": "cd ./dist && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ersurajnegi/ngx-malihu-scroller.git"
  },
  "keywords": [
    "angular",
    "angular-2",
    "angular-4",
    "angular2",
    "angular4",
    "malihu-scrollbar",
    "malihu-scroller",
    "ng2 malihu",
    "ng2",
    "ng4",
    "ngx",
    "malihu",
    "custom",
    "scrollbar",
    "scroller"
  ],
  "author": {
    "name": "Suraj Negi",
    "email": "er.surajnegi@gmail.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ersurajnegi/ngx-malihu-scroller/issues"
  },
  "homepage": "https://github.com/ersurajnegi/ngx-malihu-scroller#readme",
  "dependencies": {
    "jquery": "^3.2.1",
    "malihu-custom-scrollbar-plugin": "^3.1.5"
  },
  "devDependencies": {  
    "@angular/compiler": "^4.3.1",
    "@angular/compiler-cli": "^4.3.1",
    "@angular/core": "^4.3.1",
    "del": "^3.0.0",
    "rollup": "^0.45.2",
    "rxjs": "^5.4.2",
    "typescript": "^2.4.2",
    "uglify-js": "^3.0.25",
    "zone.js": "^0.8.14"
  }
}
